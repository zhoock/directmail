mixin cartItem(together, title, period, address, name, addInstance, subscription, price, img)
    .b-block-magazine&attributes(attributes)

        if restoreSubscription
            a(href="#").link-restore Восстановить

        else if editionN
            i.icon-Item_pop_close

            .b-description--popup
                i.icon-Alert
                =" "
                = subscription

        else
            i.icon-Item_pop_close

        if noInformation
            .b-block-magazine__cover--popup
                img(src="/www/images/" + img)

        a(href="#", class={restore: restoreSubscription === "active" || editionN === "active"})
            figure
                .b-block-magazine__cover
                    .b-block-magazine__logs--package

                        if setImg
                            img(src="/www/images/" + img)
                            img(src="/www/images/" + img)
                            img(src="/www/images/" + img)
                        else
                            img(src="/www/images/" + img)

                .b-block-magazine__data
                    .b-block-magazine__together= together
                    figcaption= title
                    .b-block-magazine__period= period
                    .b-description

                        if periodСlosed || editionN
                            i.icon-Alert
                            =" "
                            = subscription


                    .b-block-magazine__address= address
                    .b-block-magazine__name= name
                    .b-block-magazine__add-instance= addInstance

                    if periodСlosed
                        .btn.btn__change-period Изменить период



                    else if editionN
                        .b-price
                            .b-price__book

                    else
                        .b-price
                            .b-price__book
                                | от
                                =" "
                                =price
                                =" "
                                | &#8381;

                    if costChanged
                        .b-price
                            .b-price__book
                                | от
                                =" "
                                =price
                                =" "
                                | &#8381;




